<%= render "shared/header" %>

<div class = "ingredient">
  <div class = "ingredient-name">
    <b><%= @ingredient.name %></b>
  </div>

  <%= image_tag @ingredient.image.to_s, :size =>'150x170' , class: "ingredient-image" %>
  <div class = "ingredient-detail">
    <p>小話</p>
      <%= @ingredient.detail %>
  </div>

  <div class = "ingredient-recipes">
    <div class = "recipes-lists">
      <p><%= @ingredient.name%> を使ったレシピ</p>
      
      <% if @recipes.any? %>
        <ul>
        <% @recipes.each do |recipe| %>
          <li>
            <%= link_to recipe.dish_name, recipe_path(recipe) %> <!-- レシピ詳細ページへのリンク -->
          </li>
        <% end %>
        </ul>
      <% else %>
        <p>この食材を使ったレシピはまだ登録されていません。</p>
      <% end %>
     
    </div>
  </div>
</div>