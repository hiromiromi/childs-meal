  <%= render "shared/header" %>
    <main class="main">
        <h1></h1>
        <p>レシピを見つけよう</p>

        <div class="section-label">食材から探す</div>
        <div class="search-bar">
            <input type="text" placeholder="食材を入力してください">
            <button>検索</button>
        </div>

        <div class="section-label">摂りたい栄養から探す</div>
          <% @categories.each do |category| %>
            <div class ="button">
              <button onclick="location.href='#'">
                 <%= category.label %>
              </button>
            </div>
          <% end %>

        <div class="section-label">１食分の献立を探す</div>
        <div class="menu-button">
            <button>一食献立</button>
        </div>

          <div class="column-button">
            <button>コラムを読む</button>
          </div>
        </div>
    </main>